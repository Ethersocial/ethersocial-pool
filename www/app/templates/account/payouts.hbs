<div class="container">
  {{high-charts mode=chartMode chartOptions=chartPayment content=chartData}}
  {{#if model.payments}}
  <h4>{{t "payout.latest_payouts"}}Your Latest Payouts</h4>
  <div class="table-responsive">
    <table class="table table-condensed table-striped">
      <thead>
        <tr>
          <th>{{t "payout.time"}}Time</th>
          <th>{{t "payout.txid"}}Tx ID</th>
          <th>{{t "payout.amount"}}Amount</th>
        </tr>
      </thead>
      <tbody>
        {{#each model.payments as |tx|}}
          <tr>
            <td>{{format-date-locale tx.timestamp}}</td>
            <td>
              <a href="{{config.BlockExplorerLink}}/tx/{{tx.tx}}" class="hash" rel="nofollow" target="_blank">{{tx.tx}}</a>
            </td>
            <td>{{format-balance tx.amount}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{else}}
  <h3>{{t "payout.no_payouts_yet"}}</h3>
  {{/if}}
</div>
